<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://kefirsf.org/kefirbb/schema"
    xsi:schemaLocation="http://kefirsf.org/kefirbb/schema http://kefirsf.org/kefirbb/schema/kefirbb-1.0.xsd">
    <code>
        <pattern ignoreCase="true">[list]<var/>[/list]</pattern>
        <template>&lt;ul&gt;<var/>&lt;/ul&gt;</template>
    </code>
    <code>
        <pattern ignoreCase="true">[list]</pattern>
        <template>&lt;ul&gt;</template>
    </code>
    <code>
        <pattern ignoreCase="true">[list=<var name="type"/>]<var name="content"/>[/list]</pattern>
        <template>&lt;ol='<var name="type"/>'&gt;<var name="content"/>&lt;/ol&gt;</template>
    </code>
    <code>
        <pattern ignoreCase="true">[list=<var name="type"/>]</pattern>
        <template>&lt;ol='<var name="type"/>'&gt;</template>
    </code>
</configuration>