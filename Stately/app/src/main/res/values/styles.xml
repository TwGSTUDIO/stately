    <style name="TextLoginField" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">17sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="ExploreField" parent="Widget.Design.TextInputLayout">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">?attr/themedColorPrimaryText</item>
        <item name="colorControlNormal">?attr/themedColorPrimaryText</item>
        <item name="colorControlActivated">?attr/themedColorPrimaryText</item>
    </style>

