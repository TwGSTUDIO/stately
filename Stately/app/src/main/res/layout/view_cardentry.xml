<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardentry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:id="@+id/cardentry_label"
    android:paddingTop="8dp"
    android:textSize="12sp"
    android:fontFamily="sans-serif-light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="?attr/themedColorSecondaryText"
    tools:text="@string/card_overview_other_demonym" />
<TextView
    android:id="@+id/cardentry_content"
    android:textSize="15sp"
    android:fontFamily="sans-serif"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="?attr/themedColorPrimaryText"
    tools:text="Mignonese (noun/adjective, plural Mignonese)" />
</LinearLayout>